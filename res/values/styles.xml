<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar" />
    
    <style name="Titlebar">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">56dp</item>
	    <item name="android:background">@drawable/titlebar</item>
	    <item name="android:textColor">#ffffff</item>
	 </style>
	 <style name="Titlebar.Logo">
	     <item name="android:layout_marginLeft">14dp</item>
	 </style>
	 <style name="Titlebar.Title">
	     <item name="android:textColor">#ffffff</item>
	     <item name="android:layout_marginLeft">1dp</item>
	     <item name="android:textSize">18sp</item>
	 </style>
	 
	 <style name="listViewItem">
	     <item name="android:padding">5dp</item>
	     <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
	 </style>
	 
	 <style name="CourseRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:padding">3dp</item>
    </style>
    
    <style name="CourseRowTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:paddingLeft">3dp</item>
    </style>
    <style name="CourseRowInfo" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#999</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
    </style>
    
    
    <style name="SessionTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SessionInfo" parent="@android:style/TextAppearance.Small">               
        <item name="android:textColor">#FFF</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingLeft">3dp</item>
    </style>
    
    <style name="SessionRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:padding">3dp</item>
    </style>
    
    <style name="SessionRowTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:paddingLeft">3dp</item>
    </style>
    <style name="SessionRowCollectionCount" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#999</item>
        <item name="android:paddingLeft">3dp</item>
    </style>
    <style name="SessionRowInfo" parent="@android:style/TextAppearance.Small">               
        <item name="android:textColor">#999</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:gravity">right</item>
    </style>
    
     <style name="CounterWrapper">
        <item name="android:paddingRight">8dp</item>
    </style>
    <style name="QuestionCounter" parent="@android:style/TextAppearance.Small.Inverse"></style>
    <style name="QuestionOverall" parent="@android:style/TextAppearance.Large.Inverse"></style>
    <style name="Question" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/bg_question</item>
    </style>
    <style name="QuestionButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_answer_unselected</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    
    <style name="CorrectAnswer" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/bg_correct_answer</item>
    </style>
    <style name="ArchiveAnswers" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/bg_archive_answer_wrong</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginLeft">14dp</item>
    </style>
    
    <style name="Dialog" parent="@android:style/Theme.Dialog" >
        <item name="android:background">#999</item>
    </style>

</resources>