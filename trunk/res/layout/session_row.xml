<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
style="@style/SessionRow"
>
     <TextView 
     android:layout_alignParentTop="true"
     android:layout_alignParentLeft="true"
     android:id="@+id/tx_session_row_title"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" 
     android:singleLine="true"
     style="@style/SessionRowTitle"/>
     
     <TextView
         android:id="@+id/tx_session_row_description"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/tx_session_row_title"
         android:singleLine="true"
         style="@style/SessionRowInfo" />
    
     <TextView
         android:id="@+id/tx_session_row_collectioncount"
         android:layout_alignParentTop="true"
     	 android:layout_alignParentRight="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         style="@style/SessionRowCollectionCount" />

   
     
</RelativeLayout>